

<div class="container text-center center">
  <div class="row">

     <h1>Tasks</h1>

     <ul>
      <% @tasks.each do |task| %>
      <li><%= task.done ? "[x]" : "[ ]" %> - <%= link_to(task.name, task) %></li>
      <% end %>
    </ul>

    <%= link_to "New Task", new_task_path  %>

</div>
</div>
